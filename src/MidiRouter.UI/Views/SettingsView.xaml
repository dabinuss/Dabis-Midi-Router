<UserControl x:Class="MidiRouter.UI.Views.SettingsView"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
             mc:Ignorable="d"
             d:DesignHeight="450"
             d:DesignWidth="800">
    <StackPanel Margin="12">
        <CheckBox Content="Minimiert starten"
                  IsChecked="{Binding StartMinimized, Mode=TwoWay}" />

        <CheckBox Content="Im Hintergrund weiterlaufen (Tray-Host)"
                  Margin="0,10,0,0"
                  IsChecked="{Binding RunInBackground, Mode=TwoWay}" />

        <CheckBox Content="Host beim Windows-Login automatisch starten"
                  Margin="0,6,0,0"
                  IsChecked="{Binding AutoStartHost, Mode=TwoWay}" />

        <StackPanel Orientation="Horizontal" Margin="0,12,0,0">
            <TextBlock VerticalAlignment="Center" Text="Log-Puffer (Eintraege):" Margin="0,0,8,0" />
            <TextBox Width="120" Text="{Binding LogBufferSize, Mode=TwoWay, UpdateSourceTrigger=PropertyChanged}" />
        </StackPanel>
    </StackPanel>
</UserControl>
